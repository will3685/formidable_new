<div class="banner-home-page">
  <div class="container">
    <h5>Edit Salon</h5>
    <%= simple_form_for [ @salon ] do |f| %>
      <%= f.input :name, 
        required: false,
        hint: "Edit Salon's name?" %>
      <%= f.input :description, 
        required: false,
        hint: "Edit Salon's description?" %>
      <%= f.input :address, 
          label: 'Salon`s address', 
          required: true,
          hint: '48, Rua Augusto Perreira, Madureira, Rio de Janeiro' %>
      <%= f.input :photo, 
          label: 'Edit salon profile picture',
          required: false,
          as: :file,
          hint: "Salon can be registered with no profile picture" %>
      <%= f.input :photos, 
            label: 'Add a gallery of pictures',
            required: false,
            as: :file,
            input_html: { multiple: true },
            hint: "You can register your salon with no gallery" %>
      <div class="d-flex justify-content-around">
        <%= f.submit "Update Salon", class: "btn btn-primary"%>
        <%= link_to "Cancel", user_salons_path(current_user.id), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
