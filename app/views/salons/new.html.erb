<div class="banner-home-page">
  <div class="container">
    <h1>Obrigado pela confiança</h1>
    <h5>Vamos cadastrar seu salão</h5>
     <%= simple_form_for [ @user, @salon ] do |f| %>
      <%= f.input :name,
          label: 'O nome do salão',
          required: true %>
      <%= f.input :address, 
          label: 'Endereço do salão', 
          required: true,
          hint: '48, Rua Augusto Perreira, Madureira, Rio de Janeiro' %>
      <%= f.input :photo, 
          label: 'Insira a foto de perfil do seu salão',
          required: false,
          as: :file,
          hint: "Salão pode ser cadastrado sem foto" %>
      <%= f.hidden_field :user_id, value: @user.id %>

      <%= f.submit "cadastre seu salão", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>