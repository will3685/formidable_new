<div class="banner-home-page">
  <div class="container">
    <h1>Thank you for choosing the platform</h1>
    <h5>Let's register your salon</h5>
     <%= simple_form_for [ @user, @salon ] do |f| %>
      <%= f.input :name,
          label: 'O nome do salão',
          required: true %>
      <%= f.input :description,
          label: 'Insira um slogan do seu serviço',
          required: true %>
      <%= f.input :address, 
          label: 'Endereço do salão', 
          required: true,
          hint: '48, Rua Augusto Perreira, Madureira, Rio de Janeiro' %>
      <%= f.input :photo, 
          label: 'Insira a foto de perfil do seu salão',
          required: false,
          as: :file,
          hint: "Salão pode ser cadastrado sem foto" %>
      <%= f.hidden_field :user_id, value: @user.id %>

      <%= f.submit "Register your salon", class: "btn btn-primary"%>
      <%= link_to "Cancel", user_salons_path(current_user.id), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>