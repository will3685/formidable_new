<!-- Button trigger modal -->
<button type="button" class="button-second" data-bs-toggle="modal" data-bs-target="#modal_charter">
  SUSCRIBE
</button>

<!-- Modal -->
<div class="modal fade" id="modal_charter" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Terms of Service</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body modal-body-charter">
        By clicking, you are agreeing to our privacy conditions: <br> <br>
        1.  Your data will not be published unless for judicial purposes.<br>
        2.  Your data is protected according to Brazilian law.<br>
        3.  You cannot sue the company for using the data for marketing purposes.<br>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn-second" data-bs-dismiss="modal">Close</button>
        <form action="/users/sign_up">
          <input class="button-second" type="submit" value="Accept" />
        </form>
      </div>

    </div>
  </div>
</div>

